{
  "name": "dude-browser-extension",
  "version": "1.0.0",
  "description": "AI-powered Chrome extension for summarizing, translating, and validating web content",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:extension": "npm run build && npm run copy:manifest",
    "copy:manifest": "copy manifest.json dist\\",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^22.0.2",
    "@tsconfig/vite-react": "^7.0.1",
    "@types/chrome": "^0.0.268",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.10.0",
    "@types/trusted-types": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autoprefixer": "^10.4.21",
    "chrome-types": "^0.1.384",
    "eslint": "^8.54.0",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vite": "^7.1.9"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "summarization",
    "translation",
    "validation",
    "gemini-nano",
    "chrome-ai-api"
  ],
  "author": "Bence Désvári",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bzddbz/dude-open-chrome-browser-extension.git"
  },
  "bugs": {
    "url": "https://github.com/bzddbz/dude-open-chrome-browser-extension/issues"
  },
  "homepage": "https://github.com/bzddbz/dude-open-chrome-browser-extension#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "dompurify": "^3.3.0"
  }
}
